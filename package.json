{
  "name": "vite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "dotenv -e .env.local vite",
    "dev:uat": "dotenv -e .env.uat vite",
    "build": "tsc -b && vite build",
    "build:uat": "dotenv -e .env.uat vite build",
    "build:prod": "dotenv -e .env.production vite build",
    "preview": "vite preview",
    "preview:uat": "dotenv -e .env.uat vite preview",
    "preview:prod": "dotenv -e .env.production vite preview",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "format:check": "prettier --check 'src/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:coverage": "playwright test --reporter=html",
    "test:e2e": "playwright test -c playwright.config.e2e.ts",
    "test:unit": "playwright test -c playwright.config.unit.ts",
    "sonar": "sonar-scanner",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.4",
    "i18next": "^25.0.0",
    "i18next-browser-languagedetector": "^8.0.4",
    "i18next-http-backend": "^3.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@playwright/experimental-ct-react": "^1.45.0",
    "@playwright/test": "^1.45.0",
    "@types/node": "^20.12.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "eslint-plugin-playwright": "^1.4.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^8.0.0",
    "lightningcss": "^1.29.3",
    "tailwindcss": "^4.1.4",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.0"
  }
}
