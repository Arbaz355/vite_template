{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "types": ["node", "@playwright/test", "@playwright/experimental-ct-react"],
    "isolatedModules": true,
    "target": "ES2021",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "include": ["tests", "src/setupTests.ts", "src/components"],
  "exclude": ["node_modules"]
}
